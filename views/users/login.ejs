<% layout ('../layouts/boilerplate') %>


    <div class="row mb-2">

        <div class="container d-flex justify-content-center align-items-center mt-2">
            <div class="row">
                <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                    <div class="card shadow login-card ">

                        <img src="/images/login-card.jpg" alt="Login Card Image" class="card-img-top" />
                        <div class="card-body">
                            <!-- <h5 class="card-title">Login</h5> -->
                            <form action="/login" method="POST" class="validated-form" novalidate>
                                <!-- Username  -->
                                <div class="mb-3">
                                    <label class="form-label" for="username">Username</label>
                                    <input class="form-control" type="text" id="username" name="username" autofocus
                                        required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>

                                <!-- Password  -->
                                <div class="mb-3">
                                    <label class="form-label" for="password">Password</label>
                                    <input class="form-control" type="password" id="password" name="password" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>

                                <!-- Login Button  -->
                                <button class="btn btn-login btn-block">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>