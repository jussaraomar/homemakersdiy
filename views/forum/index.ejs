<% layout ('../layouts/boilerplate') %>

    <!-- Page Title  -->
    <div class="row mb-3">
        <div class="col">
            <div class="main-heading">
                <h1>Community Forum</h1>
            </div>
        </div>
    </div>


    <div class="row justify-content-center">
        <div class="header-card">

            <!-- Search Bar  -->
            <div class="col">


                <form class="search-bar mb-5" action="/forum/search" method="GET">
                    <div class="input-group">
                        <input type="search" class="form-control search-input" name="q" placeholder="Search forum..."
                            aria-label="Search forum" />
                        <button class="btn btn-search" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </div>
                </form>

            </div>
            <!-- Sort and Filter  -->
            <div class="col">
                <form action="/forum" method="GET" class="filter-form mb-5">
                    <div class="row align-items-end g-3 mb-3">
                        <div class="col-md-4">
                            <label for="sort" class="form-label">Sort By</label>
                            <% const currentSort=typeof sort !=='undefined' ? sort : '' ; %>

                                <select name="sort" id="sort" class="form-select custom-select">
                                    <option value="">Default</option>
                                    <option value="newest" <%=currentSort==='newest' ? 'selected' : '' %>>Newest
                                    </option>
                                    <option value="oldest" <%=currentSort==='oldest' ? 'selected' : '' %>>Oldest
                                    </option>
                                </select>
                        </div>


                        <div class="col-md-4">
                            <button type="submit" class="btn btn-apply w-100">
                                Apply
                            </button>
                        </div>
                    </div>
                </form>
            </div>



        </div>
    </div>

    <!-- Ask Question Button  -->
    <div class="row">
        <div class="col">
            <div class="mb-4 new-button">

                <a href="/forum/new" class="btn btn-primary mt-2 d-inline-flex align-items-center gap-1">
                    <i class="bi bi-plus-lg"></i>
                    Ask Question
                </a>
            </div>
        </div>
    </div>

    <!-- Forum Cards  -->
    <div class="row">
        <div class="col">
            <%- include('../partials/forumCards') %>
        </div>
    </div>